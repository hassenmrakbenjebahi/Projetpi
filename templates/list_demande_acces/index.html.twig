       <script>
        $(document).ready(function(){  
      $('.acceptebtn').on('click' ,function(e){ 
        var blq_id = $(this).attr("id");
        document.getElementById("user_id").value = blq_id;
        $('#acceptemodal').modal("show");
    })
});

      $(document).ready(function(){  
      $('.refusebtn').on('click' ,function(e){ 
