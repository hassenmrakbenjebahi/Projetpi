  

            
{% extends "base_admin.html.twig" %}
{% block content %}
    
           
            <div class="main-content">

                <div class="page-content">
                    <div class="container-fluid">

                        
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                                    <h4 class="mb-sm-0 font-size-18">Magasins</h4>

                                </div>
                            </div>
                        </div>
                        

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    
                                    <div class="card-body">
        
                                        <table id="datatable" class="table table-bordered dt-responsive  nowrap w-100">
                                            <thead>
                                            <tr>
                                                <th>nom</th>
                                                <th>adresse-email</th>
                                                <th>pays</th>
                                                <th>gouvernorat</th>
                                                <th>ville</th>
                                                <th>rue</th>
                                                 <th>action</th>

                                            </tr>
                                            </thead>
        
        
                                            <tbody>
                                            {% for m in magasins %}
                                            <tr>
                                                <td>{{m.nom}}</td>
                                                
                                                <td>{{m.email}}</td>
                                                <td>{{m.pays}}</td>
                                                <td>{{m.gouvernorat}}</td>
                                                <td>{{m.ville}}</td>
                                                <td>{{m.rue}}</td>
                                                {% if m.bloque==0 %}
                                                 <td><button class="btn btn-outline-warning waves-effect waves-light bloque" id="{{m.id}}">bloquer</button>
                                                 {% else %}
                                                 <td><button class="btn btn-outline-success waves-effect waves-light debloque" id="{{m.id}}">débloquer</button>

                                                {% endif %}

                                                
                                            </tr>
                                            {% endfor %}
                                 
                                            </tbody>
                                        </table>
        
                                    </div>
                                </div>
                            </div> 
                        </div> 
        
                    </div> 
                </div>
                
              
                
            </div>



            <div class="modal" tabindex="-1" role="dialog" id="bloquemodal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Bloque</h5>
        
      </div>
      <div class="modal-body">
        <p>êtes vous sur de bloquer le magasin ?</p>
      </div>
      <form method="POST" action="{{path('bloquer_magasin')}}" name="form" id="form" class="form">
      <input type="hidden" name="bloque_id" id="mag_id"/>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Oui</button>
      </div>
      </form>
    </div>
  </div>
</div>


<div class="modal" tabindex="-1" role="dialog" id="debloquemodal">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Débloque</h5>
        
      </div>
      <div class="modal-body">
        <p>êtes vous sur de débloquer le magasin ?</p>
      </div>
      <form method="POST" action="{{path('debloquer_magasin')}}" name="form" id="form" class="form">
      <input type="hidden" name="debloque_id" id="magid"/>
      <div class="modal-footer">
        <button type="submit" class="btn btn-primary">Oui</button>
      </div>
      </form>
    </div>
  </div>
</div>
            
{% endblock %}         
       

