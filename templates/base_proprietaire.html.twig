  <!-- Template Main CSS File -->
  <link href="{{asset('assets_front/css/style.css')}}" rel="stylesheet">
   {% block stylesheet %}
    
   {% endblock %}
  
</head>

<body>

  <!-- ======= Top Bar ======= -->
  <div id="topbar" class="d-flex align-items-center fixed-top">
    <div class="container d-flex justify-content-between">
      <div class="contact-info d-flex align-items-center">
        <i class="bi bi-envelope">{{app.user.username}}</i> <a href="#"></a>
        <i class="bi bi-phone">{{app.user.telephone}}</i> 
      </div>
     
    </div>
  </div>

  <!-- ======= Header ======= -->
  <header id="header" class="fixed-top">
    <div class="container d-flex align-items-center">

      
      <a href="#" class="logo me-auto"><img src="{{asset('assets/images/logo-myvet.png')}}" alt="" class="img-fluid"></a>

      <nav id="navbar" class="navbar order-last order-lg-0">
        <ul>
          <li><a class="nav-link scrollto active" href="#hero">Blog</a></li>
          <li><a class="nav-link scrollto " href="#">Mes Animaux</a></li>
          <li><a class="nav-link scrollto" href="#about">Mes Rendez-vous</a></li>
          <li><a class="nav-link scrollto" href="#services">Magasin</a></li>
          <li><a class="nav-link scrollto" href="#services">Réclamation</a></li>

          <li class="dropdown"><a href="#"><span>Parametres</span> <i class="bi bi-chevron-down"></i></a>
            <ul>
              <li><a href="#">Modifier Profile</a></li>
                
              <li><a href="{{path('app_update_password_prop')}}">Modifier Mot De Passe</a></li>
              
            </ul>
          </li>
        </ul>
        <i class="bi bi-list mobile-nav-toggle"></i>
      </nav><!-- .navbar -->

      <a href="#appointment" class="appointment-btn scrollto"><span class="d-none d-md-inline">Prendre</span> Rendez-vous</a>

       <a href="{{path('app_logout')}}" class="logout-btn scrollto"><span class="d-none d-md-inline"></span>Déconnecter</a>

    </div>
  </header><!-- End Header -->

  
    {% block content %}
        
    {% endblock %}
  

  <!-- Template Main JS File -->
  <script src="{{asset('assets_front/js/main.js')}}"></script>
   {% block javascript %}
    
   {% endblock %}
</body>

</html>