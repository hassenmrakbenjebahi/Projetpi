{% extends "base_veterinaire.html.twig" %}
{% block content %}
<br><br><br><br>
  <main id="main">

     <section id="appointment" class="appointment section-bg">
      <div class="container">

        <div class="section-title">
          <h2>Modifier mot de passe</h2>
        </div>

        <form action="{{path('app_veterinaire_pwd')}}" method="post" role="form" class="php-email-form">
          <div class="row">
            <div class="col-md-4 form-group">
              <input type="hidden" name="id" value="{{app.user.id}}" class="form-control" id="name" placeholder="Your Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars">
              <div class="validate"></div>
            </div>
            <div class="col-md-4 form-group mt-3 mt-md-0">
              <input type="password" class="form-control" name="password" id="email" placeholder="nouveau mot de passe" required>
            </div>
            
          </div>
          

         
          <div class="text-center"><button type="submit">modifier</button></div>
        </form>

      </div>
    </section><!-- End Appointment Section -->
  </main><!-- End #main -->

{% endblock %}